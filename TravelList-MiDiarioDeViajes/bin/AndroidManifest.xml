<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.alexmj.travellist"
    android:versionCode="5"
    android:versionName="5.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- The main/home activity-->
        <activity
            android:name=".TravelListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Childs of the main activity -->
        <activity 
            android:name=".TravelActivity"
            android:label="@string/title_activity_travel" 
            android:parentActivityName=".TravelListActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
        	<!-- Parent activity meta-data to support API level 7+ -->
        	<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value=".TravelListActivity" />
        	<meta-data android:name="android.support.UI_OPTIONS"
                   android:value="splitActionBarWhenNarrow" />
        </activity>
        
        <activity
            android:name=".EditTravelActivity"
            android:label="@string/title_activity_edit_travel"
            android:parentActivityName=".TravelListActivity" >
        	<!-- Parent activity meta-data to support API level 7+ -->
        	<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value=".TravelListActivity" />
        </activity>
        
        <provider
            android:name=".data.TravelsProvider"
            android:authorities="es.alexmj.travellist"
            android:multiprocess="true"
            android:exported="false"
            />        
    </application>

</manifest>