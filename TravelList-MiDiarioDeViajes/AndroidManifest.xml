<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.alexmj.travellist"
    android:versionCode="4"
    android:versionName="4.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TravelListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".TravelActivity"
            android:label="@string/title_activity_travel" >
        </activity>
        
        <activity
            android:name=".EditTravelActivity"
            android:label="@string/title_activity_edit_travel" >
        </activity>
        
        <provider
            android:name=".data.TravelsProvider"
            android:authorities="es.alexmj.travellist"
            android:multiprocess="true"
            android:exported="false"
            />        
    </application>

</manifest>